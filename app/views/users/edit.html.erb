<div class="container">
  <div class="row">
    <div class="mx-auto col-lg-5 px-5 px-sm-0">
      <h2>User info</h2>

      <%= form_with model: @user, url: user_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile_image, "image" %><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
